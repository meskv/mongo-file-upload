<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- BOOTSTRAP -->

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
                <h2 class="text-center dispaly-4 my-4">MONGODB FILE UPLOAD</h2>
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="file" class="form-label">Image Upload</label>
                        <input class="form-control" type="file" id="file" name="file">
                    </div>
                    <input type="submit" value="Submit" class="btn btn-primary btn-block">
                </form>
                <hr>

                <div class="file">
                    <% if(files) { %>
                        <% files.forEach((file)=> { %>
                            <div class="card card-body mb-3">
                            <% if (file.isImage) { %>
                                <img src="/image/<%= file.filename %>" alt="">
                            <% } else { %>
                            <%= file.filename %>
                                    <iframe src="/files/<%= file.filename %>" frameborder="0"></iframe class="pdf-frame">
                            <% } %>

                            <form method="POST" action="/files/<%= file.filename %>?_method=DELETE">
                                <p>filenmae: <%= file.filename %> with id:  <%= file._id %> </p>
                                <button class="btn btn-danger btn-block mt-3">Delete</button>
                                <a href="/files/<%= file.filename %>" class="btn btn-danger btn-block mt-3" download="<%= file.filename %> ">Download</a>
                            </form>
                            </div>

                        <% }) %>

                    <% } else { %>
                        <p>No files to show</p>
                    <% } %>
                </div>

            </div>
        </div>
    </div>


    <style>
        .image-conatainer {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .image-conatainer img {
            width: 100%;
            height: 200px;
            margin: 10px;
        }

        .pdf-frame {
            width: 100%;
            height: 200px;
            margin: 10px;
        }
    </style>

    <!-- SCRIPT -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SCRIPT -->
</body>

</html>